{
    "manifest_version": 3,
    "name": "Auto Refresh and Click",
    "version": "1.0",
    "web_accessible_resources": [
        {
            "resources": [
                "notification.mp3", 
                "notificationSend.mp3",
                "offscreen.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "<all_urls>",
        "scripting",
        "notifications",
        "offscreen"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "commands": {
        "toggle-automation": {
            "suggested_key": {
                "default": "Ctrl+Shift+L"
            },
            "description": "Iniciar e parar a automação"
        }
    }
}